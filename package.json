{
     "name": "next-data-kit",
     "version": "7.5.0",
     "description": "A powerful table utility for server-side pagination, filtering, and sorting with React components",
     "type": "module",
     "main": "./dist/index.cjs",
     "module": "./dist/index.js",
     "types": "./dist/index.d.ts",
     "exports": {
          ".": {
               "import": {
                    "types": "./dist/index.d.ts",
                    "default": "./dist/index.js"
               },
               "require": {
                    "types": "./dist/index.d.cts",
                    "default": "./dist/index.cjs"
               }
          },
          "./server": {
               "import": {
                    "types": "./dist/server.d.ts",
                    "default": "./dist/server.js"
               },
               "require": {
                    "types": "./dist/server.d.cts",
                    "default": "./dist/server.cjs"
               }
          },
          "./client": {
               "import": {
                    "types": "./dist/client.d.ts",
                    "default": "./dist/client.js"
               }
          },
          "./types": {
               "import": {
                    "types": "./dist/types/index.d.ts",
                    "default": "./dist/types/index.js"
               },
               "require": {
                    "types": "./dist/types/index.d.cts",
                    "default": "./dist/types/index.cjs"
               }
          }
     },
     "files": [
          "dist"
     ],
     "scripts": {
          "build": "tsup && tsc -p tsconfig.client.build.json",
          "test": "vitest run",
          "test:coverage": "vitest run --coverage",
          "playground:install": "npm --prefix playground install",
          "playground:dev": "npm --prefix playground run dev",
          "playground:build": "npm --prefix playground run build",
          "playground:preview": "npm --prefix playground run preview",
          "lint": "eslint src/",
          "typecheck": "tsc --noEmit"
     },
     "repository": {
          "type": "git",
          "url": "git+https://github.com/muhgholy/next-data-kit.git"
     },
     "keywords": [
          "table",
          "pagination",
          "filtering",
          "sorting",
          "react",
          "server-action",
          "mongodb",
          "mongoose"
     ],
     "author": "muhgholy",
     "license": "MIT",
     "bugs": {
          "url": "https://github.com/muhgholy/next-data-kit/issues"
     },
     "homepage": "https://github.com/muhgholy/next-data-kit#readme",
     "devDependencies": {
          "@eslint/js": "^9.39.2",
          "@radix-ui/react-checkbox": "^1.3.2",
          "@radix-ui/react-dropdown-menu": "^2.1.16",
          "@radix-ui/react-popover": "^1.1.15",
          "@radix-ui/react-select": "^2.2.6",
          "@radix-ui/react-slot": "^1.2.1",
          "@radix-ui/react-switch": "^1.2.6",
          "@semantic-release/changelog": "^6.0.3",
          "@semantic-release/exec": "^7.1.0",
          "@semantic-release/git": "^10.0.1",
          "@types/node": "^22.10.2",
          "@types/react": "^19.0.1",
          "class-variance-authority": "^0.7.1",
          "eslint": "^9.17.0",
          "lucide-react": "^0.469.0",
          "mongoose": "^9.0.2",
          "semantic-release": "^24.2.9",
          "tsup": "^8.3.5",
          "typescript": "^5.7.2",
          "typescript-eslint": "^8.49.0",
          "vitest": "^3.2.4",
          "zod": "^3.25.76"
     },
     "peerDependencies": {
          "@radix-ui/react-checkbox": ">=1.0.0",
          "@radix-ui/react-dropdown-menu": ">=2.0.0",
          "@radix-ui/react-popover": ">=1.0.0",
          "@radix-ui/react-select": ">=2.0.0",
          "@radix-ui/react-slot": ">=1.0.0",
          "@radix-ui/react-switch": ">=1.0.0",
          "class-variance-authority": ">=0.7.0",
          "lucide-react": ">=0.0.0",
          "mongoose": ">=6.0.0",
          "react": ">=18.0.0",
          "zod": ">=3.0.0"
     },
     "peerDependenciesMeta": {
          "mongoose": {
               "optional": true
          },
          "react": {
               "optional": true
          },
          "zod": {
               "optional": true
          }
     },
     "publishConfig": {
          "access": "public"
     },
     "dependencies": {
          "react-intersection-observer": "^10.0.0"
     }
}
